<h1>Posts</h1>

<% if user_signed_in? %>
  <%= button_to 'Create New Post', new_post_path, method: :get %>
<% end %>

<ul>
  <% @posts.each do |post| %>
    <li>
      <p><%= post.title %></p>

      <% if user_signed_in? %>
        <p>
        Author: <%= User.find(post.user_id).username %>
        </p>
      <% end %>

      <p><%= post.body %></p>
    </li>
  <% end %>
</ul>
