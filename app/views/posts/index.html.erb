<h1>Posts</h1>
<%= button_to 'Home', posts_path, method: :get %>
<% if user_signed_in? %>
  <%= button_to 'Log Out', destroy_user_session_path, method: :delete  %>
<% else %>
  <%= button_to 'Log In', new_user_session_path, method: :get  %>
  <%= button_to 'Sign Up', new_user_registration_path, method: :get %>
<% end %>

<% if user_signed_in? %>
  <%= button_to 'Create New Post', new_post_path, method: :get %>
<% end %>

<ul>
  <% @posts.each do |post| %>
    <li>
      <p><%= post.title %></p>

      <% if user_signed_in? %>
        <p>
        Author: <%= User.find(post.user_id).username %>
        </p>
      <% end %>

      <p><%= post.body %></p>
    </li>
  <% end %>
</ul>
